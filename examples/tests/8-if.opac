module Main is
    use std.io;

    let state = 0;

    fun if_expr() =
        if state == 1 do
            10
        elsif state == 2 do
            20
        elsif state == 3 do
            30
        else
            0
        end;

    fun if_stmt() = do
        if state == 1 do
            return 10;
